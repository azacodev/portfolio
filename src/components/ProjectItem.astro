---
const {
  title,
  description,
  link,
  technologies,
  image,
  class: className,
} = Astro.props;
---

<div class=`flex gap-6 items-center ${className}`>
  <div class="bg-gray-200 flex-1 h-64 rounded-lg"></div>

  <div class="flex flex-col flex-1">
    <h2 class="font-semibold text-2xl mb-2 tracking-wide">{title}</h2>

    <p class="text-pretty mb-2">{description}</p>

    <hr class="my-2" />

    <div class="flex flex-wrap gap-4 mb-4">
      {
        technologies.map((tech: string) => (
          <span class="font-semibold">{tech}</span>
        ))
      }
    </div>
  </div>
</div>
